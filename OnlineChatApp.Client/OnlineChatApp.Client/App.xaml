<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:OnlineChatApp.Client"
             xmlns:converters ="clr-namespace:OnlineChatApp.Client.Converters"
             x:Class="OnlineChatApp.Client.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:FromUserIdToHorizontalOptionConverter x:Key="FromUserIdToHorizontalOptionConverter"/>
            <converters:FromUserIdToBackgroundColorConverter x:Key="FromUserIdToBackgroundColorConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
